@model IEnumerable<Lot.Web.Models.EventoViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="portlet box green">
<div class="portlet-title">
    <div class="caption">
        <i class="fa fa-calendar"></i>Events List
    </div>
    
</div>
<div class="portlet-body">
    <div class="table-toolbar">
        <div class="row">
            <div class="col-md-6">
                <div class="btn-group">
                    <a asp-action="Create" button id="sample_editable_1_new" class="btn green">
                        Add New <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="fa fa-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="javascript:;">
                                Print
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>

                <th>Name+Description</th>
                <th>Winner</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Close</th>
                <th>Actions</th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">

                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)-@Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.TarjetaWin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fechainicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fechafin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cerrado)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn default">
                            <i class="fa fa-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn red">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                        
                    </td>
                </tr>
            }

            </tbody>
    </table>
</div>
                        </div>

